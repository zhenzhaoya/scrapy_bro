{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Electron: Main",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node", 
            "request": "launch",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron.cmd"
            },
            "runtimeArgs": [
                "${workspaceFolder}/main.js"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal"
        }
    ]
}

